<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@this.ViewBag.Title | FutLab IS</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,700;1,400;1,700&amp;display=swap">
    <link rel="stylesheet" href="~/Content/Styles/site.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous" />
    @RenderSection("head", required: false)
</head>
<body>
    <header>
        <div class="login" include-roles="?">
            <i class="fa fa-sign-in-alt"></i> <a asp-page="/Login/Index">@UI.Layout_LoginStatus_SignIn</a>
        </div>
        <div class="login" include-roles="*">
            <i class="fa fa-user"></i> @this.User.Identity.Name
            <i class="fa fa-sign-out-alt"></i> <a asp-page="/Login/Logout">@UI.Layout_LoginStatus_SignOut</a>
        </div>
        <img src="~/Content/Images/logo.png" alt="FutLab logo" height="75" />
    </header>

    <nav>
        <input type="checkbox" id="mtoggler" hidden="hidden" />
        <label for="mtoggler" class="open" hidden="hidden"><span>&#x2630;</span></label>
        <label for="mtoggler" class="close" hidden="hidden"><span>&#x1F5D9;</span></label>
        <ul>
            <li><a href="#">Lorem</a></li>
            <li><a href="#">Ipsum</a></li>
            <li><a href="#">Dolor</a></li>
            <li><a href="#">Sit</a></li>
            <li><a href="#">Amet</a></li>
        </ul>
    </nav>

    <main>
        <h1>@this.ViewBag.Title</h1>
        @RenderBody()
    </main>

    <footer>
        Copyright &copy; Jiří Novák, 2021
    </footer>

    @RenderSection("scripts", required: false)
</body>
</html>
